<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Glitchy Text</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: black;
            color: white;
            font-family: 'Courier New', Courier, monospace;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            text-align: center;
            overflow: hidden;
        }
        
        /* Adding the stars to the background */
        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(white, transparent) 2px 2px, transparent;
            background-size: 4px 4px;
            background-color: black;
            opacity: 0.1;
            z-index: -1;
        }

        .glitch {
            font-size: 2em;
            position: absolute;
            animation: glitch 0.2s infinite alternate;
            opacity: 0;
        }

        .start-button {
            background-color: white;
            color: black;
            border: none;
            padding: 10px 20px;
            font-size: 1.5em;
            cursor: pointer;
            border-radius: 5px;
            position: absolute;
        }

        /* Glitchy background effect after start */
        @keyframes glitch-bg {
            0% { transform: scale(1); background-position: 0 0; }
            20% { transform: scale(1.02) skew(1deg, 1deg); background-position: 5px 5px; }
            40% { transform: scale(1.01) skew(-1deg, -1deg); background-position: -5px -5px; }
            60% { transform: scale(1.03) skew(1deg, 1deg); background-position: 3px 3px; }
            80% { transform: scale(1.02) skew(-1deg, -1deg); background-position: -3px -3px; }
            100% { transform: scale(1); background-position: 0 0; }
        }
    </style>
</head>
<body>

    <div class="glitch" id="text"></div>

    <!-- Start button for user interaction -->
    <button class="start-button" id="startButton">Start</button>

    <!-- Audio element for sad music (non-looping) -->
    <audio id="sadMusic">
        <source src="https://mail.google.com/mail/u/0/s/?view=att&th=1917b296e29340f3&attid=0.1&disp=attd&realattid=f_m05ke53o0&safe=1&zw" type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>

    <script>
        const texts = [
            { text: "Hello, Hello?", duration: 1000 },
            { text: "Can someone hear me?", duration: 3000 },
            { text: "My oxygen levels are low,", duration: 2000 },
            { text: "so, I’m probably going to die,", duration: 3000 },
            { text: "and if someway, somehow", duration: 2000 },
            { text: "If my family sees this, well,", duration: 3000 },
            { text: "I love you all, but", duration: 2000 },
            { text: "I won’t be coming back", duration: 2000 },
            { text: "I guess I’m just stuck here in space, alone", duration: 4000 },
            { text: "So, Peace! YOLO-", duration: 1000 },
            { text: "Error: connection lost", duration: 5000 }
        ];

        let index = 0;
        const textElement = document.getElementById('text');
        const sadMusic = document.getElementById('sadMusic');
        const startButton = document.getElementById('startButton');
        const body = document.body;

        function showText() {
            if (index < texts.length) {
                textElement.textContent = texts[index].text;
                textElement.style.opacity = 1;
                setTimeout(() => {
                    textElement.style.opacity = 0;
                    index++;
                    setTimeout(showText, 500); // Small pause between texts
                }, texts[index].duration);
            } else {
                setTimeout(() => {
                    window.location.href = 'https://websim.ai/c/MWncXzXqLLF1imnRo'; // Redirect to the new link
                }, 2000); // 2 seconds after the last message
            }
        }

        // Play the audio and start showing texts when the button is clicked
        startButton.addEventListener('click', function() {
            sadMusic.play();
            showText();
            body.style.animation = 'glitch-bg 0.3s infinite alternate'; // Start glitchy background effect
    

        startButton.style.display = 'none'; // Hide the button after starting
        });
    </script>

</body>
</html>
